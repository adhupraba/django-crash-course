{% extends 'layout.dj' %}

{% block title %}
  {{ post.title }}
{% endblock %}

{% block content %}
  <section>
    <img class="banner" src="{{ post.banner.url }}" alt="{{ post.title }}" />
    <h1>{{ post.title }}</h1>
    <p>By {{ post.author }} on {{ post.date }}</p>
    <p>{{ post.body }}</p>
  </section>
{% endblock %}
